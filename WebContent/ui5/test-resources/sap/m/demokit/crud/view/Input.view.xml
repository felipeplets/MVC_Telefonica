<core:View controllerName="view.Input" xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:h="http://www.w3.org/1999/xhtml">
	<List>
		<InputListItem label="Name">
			<Input id="name"
				value="{/name}"
				placeholder="Name"
				type="Text" />
		</InputListItem>
		<InputListItem label="Country">
			<Select id="country"
				selectedKey="{/country}" />
		</InputListItem>
		<InputListItem label="Vendor">
			<Input id="vendor"
				value="{/vendor}"
				placeholder="Vendor"
				type="Text" />
		</InputListItem>
		<InputListItem label="Price (â‚¬/kg)">
			<Input id="price"
				value="{/price}"
				placeholder="Price"
				type="Number" />
		</InputListItem>
		<InputListItem label="Best Before">
			<DateTimeInput id="bestBefore"
				value="{/bestBefore}"
				placeholder="Best Before"
				type="Date"
				valueFormat="yyyy-MM-dd" />
		</InputListItem>
	</List>
</core:View>